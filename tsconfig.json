{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "lib/**/*"]
}
